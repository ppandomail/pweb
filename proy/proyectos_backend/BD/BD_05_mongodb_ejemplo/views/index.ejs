<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Pessoas</title>
  </head>
  <body>
    <h1>Pessoas</h1>
    <form action="http://localhost:3000/pessoa" method="post">
      <fieldset>
        <legend>Inserir pessoa:</legend>
        <p><label>Nome: <input type="text" name="nome" /></label></p>
        <p><label>Idade: <input type="number" name="idade"/></label></p>
        <p><input type="submit" name="submit" value="Inserir"/></p>
      </fieldset>
    </form>
    <fieldset>
      <legend>Tabela de pessoas:</legend>
    <table>
      <tr>
        <th>Nome</th>
        <th>Idade</th>
        <th>AÃ§oes</th>
      </tr>
      <% for(i = 0; i < pessoas.length; i++) { %>
      <tr>
        <td><%= pessoas[i].nome %></td>
        <td><%= pessoas[i].idade %></td>
        <td>
            <button onclick="apagar('<%= pessoas[i].nome %>')">X</button>
        </td>
      </tr>
      <% } %>
    </table>
  </fieldset>
  <script>
    function apagar(nome) {
      fetch("http://localhost:3000/pessoa", {
        method: "DELETE",
        body: nome
      })
    }
  </script>
  </body>
</html>
